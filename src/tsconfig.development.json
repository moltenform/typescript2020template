{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // turn these off during dev builds
    "noUnusedParameters": false, // turn these off during dev builds
    // "erasableSyntaxOnly": true, makes enums not work
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

  },
  "include": ["src", "components"]
}
